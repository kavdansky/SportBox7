@using SportBox7.Data.Models
@model List<Article>

@{
    ViewData["Title"] = "Home Page";
    ViewData["Category"] = "Home";
}


<div class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-lg-8">
                <!-- Breaking News Widget -->
                <partial name="_NewsWidgetPartial" model="@ViewBag.NewsWidget" />
            </div>
        </div>
    </div>
</div>
<!-- ##### Hero Area End ##### -->
<div class="featured-post-area">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-8">
                    <div class="row">

                        <!-- Single Featured Post -->
                        <div class="col-12 col-lg-7">
                            <div class="single-blog-post featured-post">

                                <div class="post-data">
                                    @{if (Model.Count > 0)
                                        {
                                            <a href="/Categories/Details/@Model[0].Category.CategoryNameEN" class="post-catagory">@Model[0].Category.CategoryName</a>
                                            <a href="/news/all/@Model[0].Id/@Model[0].Category.CategoryNameEN/@Model[0].Title" class="post-title">
                                                <h6>@Model[0].Title</h6>
                                            </a>
                                            <div class="post-thumb">
                                                <a href="/news/all/@Model[0].Id/@Model[0].Category.CategoryNameEN/@Model[0].Title"><img src="@Model[0].ImageUrl" alt=""></a>
                                            </div>
                                            <div class="post-meta">
                                                <p class="post-author">By <a href="#">Christinne Williams</a></p>
                                                <p class="post-excerp">@Model[0].Body.Substring(0, 450)<a href="/news/all/@Model[0].Id">...вижте повече</a></p>
                                                <!-- Post Like & Post Comment -->
                                                <div class="d-flex align-items-center">
                                                    <a href="#" class="post-like"><img src="img/core-img/like.png" alt=""> <span>392</span></a>
                                                    <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>10</span></a>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5">
                            <!-- Single Featured Post -->
                            <div class="single-blog-post featured-post-2">
                                <div class="post-thumb">
                                    <a href="/news/all/@Model[1].Id/@Model[1].Category.CategoryNameEN/@Model[1].Title"><img src="@Model[1].ImageUrl" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a href="/Categories/Details/@Model[1].Category.CategoryNameEN" class="post-catagory">@Model[1].Category.CategoryName</a>
                                    <div class="post-meta">
                                        <a href="/news/all/@Model[1].Id/@Model[1].Category.CategoryNameEN/@Model[1].Title" class="post-title">
                                            <h6>@Model[1].Title</h6>
                                        </a>
                                        <!-- Post Like & Post Comment -->
                                        <div class="d-flex align-items-center">
                                            <a href="#" class="post-like"><img src="img/core-img/like.png" alt=""> <span>392</span></a>
                                            <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>10</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Single Featured Post -->
                            <div class="single-blog-post featured-post-2">
                                <div class="post-thumb">
                                    <a href="/news/all/@Model[2].Id/@Model[2].Category.CategoryNameEN/@Model[2].Title"><img src="@Model[2].ImageUrl" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a href="/Categories/Details/@Model[2].Category.CategoryNameEN" class="post-catagory">@Model[2].Category.CategoryName</a>
                                    <div class="post-meta">
                                        <a href="/news/all/@Model[2].Id/@Model[2].Category.CategoryNameEN/@Model[2].Title" class="post-title">
                                            <h6>@Model[2].Title</h6>
                                        </a>
                                        <!-- Post Like & Post Comment -->
                                        <div class="d-flex align-items-center">
                                            <a href="#" class="post-like"><img src="img/core-img/like.png" alt=""> <span>392</span></a>
                                            <a href="#" class="post-comment"><img src="img/core-img/chat.png" alt=""> <span>10</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             
                <div class="col-12 col-md-6 col-lg-4">
                    @await Component.InvokeAsync("SideBar")
                    <vc:side-bar></vc:side-bar>
                </div>
            </div>       
        </div>
</div>
    <!-- ##### Featured Post Area End ##### -->