@using SportBox7.ViewModels.Articles
@model SportBox7.DTO.PaginatedList<ArticleInCategoryViewModel>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Category"] = Model.FirstOrDefault().CategoryEN;
}

<div class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-lg-8">
                <!-- Breaking News Widget -->
                <partial name="_NewsWidgetPartial" model="@ViewBag.NewsWidget" />
            </div>
        </div>
    </div>
</div>
<!-- ##### Hero Area End ##### -->
<div class="blog-area section-padding-0-80">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="blog-posts-area">
                    @foreach (var article in Model)
                    {
                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post mb-30">
                            <div class="post-data">
                                <a href="#" class="post-catagory">@article.Category</a>
                                <a href="/news/all/@article.Id" class="post-title">
                                    <h6>@article.H1Tag</h6>
                                </a>
                                <div class="post-thumb">
                                    <a href="/news/all/@article.Id"><img src="@article.ImageUrl" height="200" alt=""></a>
                                </div>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#">@article.Creator</a></p>
                                    <p class="post-excerp">@article.Body <a href="/news/all/@article.Id">...вижте повече</a></p>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                </div>
                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                }

                <a asp-action="Details"                  
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   class="btn btn-default @prevDisabled">
                    Предишни
                </a>
                <a asp-action="Details"                
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   class="btn btn-default @nextDisabled">
                    Следващи
                </a>
            </div>
            <div class="col-12 col-lg-4">
                <div class="blog-sidebar-area">

                    <!-- Latest Posts Widget -->
                    <div class="latest-posts-widget mb-50">
                        <!-- Single Featured Post-->
                        @await Component.InvokeAsync("SideBar")
                        <vc:side-bar></vc:side-bar>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Blog Area End ##### -->

